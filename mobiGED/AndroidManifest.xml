<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobiged"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >
        <activity
            android:name="com.example.mobiged.Home"
            android:label="@string/app_name"
            android:parentActivityName="com.example.mobiged.Home"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mobiged.Home" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mobiged.Inscription"
            android:label="@string/title_activity_inscription" >
        </activity>
        <activity
            android:name="com.example.mobiged.Fragments.HomeFragment"
            android:label="@string/title_activity_main_page" >
        </activity>
        <activity android:name="com.example.mobiged.Fragments.SearchFragment" >
        </activity>
        <activity android:name="com.example.mobiged.Fragments.CamFragment" >
        </activity>
        <activity
            android:name="com.example.mobiged.Connexion"
            android:label="@string/connexion" >
        </activity>
        <activity
            android:name="com.example.mobiged.Camera" >
        </activity>
    </application>

</manifest>